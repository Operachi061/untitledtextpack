# variables
root = .
builddir = build
cflags = -Wall -Werror -Wpedantic

# rules
rule cc
    command = clang $cflags -c $in -o $out 

rule altcc
    command = gcc -c $in -o $out

rule link
    command = clang $in -o $out

rule altlink
    command = gcc $in -o $out

rule clean
    command = rm -f $builddir/*.o $root/root/usr/bin/*

# building
build $builddir/main.o: cc $root/src/untitledtextbuildsystem/main.c
build $builddir/loadbar.o: cc $root/src/untitledtextbuildsystem/loadbar.c
build $builddir/utsh.o: cc $root/src/untitledtextshell/main.c
build $builddir/utw.o: altcc $root/src/untitledtextwriter/main.c

# linking
build $root/root/bin/utbs: link $builddir/main.o $builddir/loadbar.o
build $root/root/bin/utsh: link $builddir/utsh.o
build $root/root/bin/utw: altlink $builddir/utw.o
